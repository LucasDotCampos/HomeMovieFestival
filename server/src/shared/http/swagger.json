{
  "openapi": "3.0.0",
  "info": {
    "title": "Home Movies Festival",
    "description": "Api made to share your own movies",
    "termsOfService": "http:localhost:4000/terms",
    "contact": {
      "email": "lucasdotcampos@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000/",
      "description": "host server"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Route to register an user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Create User"
              },
              "examples": {
                "Create User": {
                  "value": {
                    "name": "john doe",
                    "email": "johndoe@oscar.com",
                    "password": "SenhaSegura123@!#"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "409": {
            "description": "Email already exists"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Create User"
                }
              }
            }
          }
        }
      },

      "get": {
        "summary": "You'll get a list of all the registered users",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Create User"
                }
              }
            }
          }
        }
      }
    },
    "/createmovie": {
      "post": {
        "summary": "Route to register a movie",
        "tags": ["Movies"],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Create Movie"
              },
              "examples": {
                "Create User": {
                  "value": {
                    "title": "The Autopsy of Jane Doe",
                    "description": "The corpse of an unidentified young woman is found at the scene of an inexplicable multiple homicide",
                    "releaseDate": "11/09/2016"
                  }
                }
              }
            }
          }
        }
      }
    },

    "/users/{name}": {
      "get": {
        "summary": "You'll be able to get an specific user",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Create User"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Create User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Validate User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },

      "Create Movie": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "releaseDate": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "magnet": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "format": "binary"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
