{
  "openapi": "3.0.0",
  "info": {
    "title": "Home Movies Festival",
    "description": "Api made to share your own movies",
    "termsOfService": "http:localhost:4000/terms",
    "contact": {
      "email": "lucasdotcampos@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000/",
      "description": "host server"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Route to register an user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        }
      }
    },
    "/createmovie": {
      "post": {
        "summary": "Route to register a movie",
        "tags": ["Movies"]
      }
    },

    "/users/:name": {
      "get": {
        "summary": "You are able to get an specific user replacing ':name' by the user's name",
        "tags": ["Users"]
      }
    },
    "/users/": {
      "get": {
        "summary": "You'll get a list of all the registered users",
        "tags": ["Users"]
      }
    }
  },
  "components": {
    "schemas": {
      "Create user": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Validate user": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}
